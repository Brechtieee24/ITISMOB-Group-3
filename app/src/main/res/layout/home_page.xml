<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0C4BB">

    <LinearLayout
        android:id="@+id/log_residency_container_lnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        >

        <ImageView
            android:id="@+id/logo_home_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cosca_love_green_and_red_logo_1" />

        <ImageButton
            android:id="@+id/log_residency_home_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0C4BB"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/logresidencybtn" />

        <!-- OFFICER VIEW: Log Activity Button -->
        <ImageButton
            android:id="@+id/log_activity_home_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#14A866"
            android:backgroundTint="#AFC3BA"
            android:visibility="gone"
            app:srcCompat="@drawable/log_residency_btn_f" />

        <!-- MEMBER VIEW: Activity History Button -->
        <ImageButton
            android:id="@+id/activity_history_home_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#14A866"
            android:backgroundTint="#AFC3BA"
            android:visibility="gone"
            app:srcCompat="@drawable/acthistorybtn" />

        <ImageButton
            android:id="@+id/view_activities_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0C4BB"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/viewactivitiesbtn" />

        <ImageButton
            android:id="@+id/view_other_members_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0C4BB"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/viewothermembersbtn" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/return_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#AFC3BA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_residency_container_lnr"
        app:srcCompat="@drawable/log_out_btn" />

    <include
        android:id="@+id/navbar"
        layout="@layout/page_header" />

    <FrameLayout
        android:id="@+id/dialogLogActivityContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <include
            android:id="@+id/log_activity_dialog"
            layout="@layout/dialog_log_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/dialogQrFrameContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <include
            android:id="@+id/qr_frame_dialog"
            layout="@layout/dialog_qr_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>