<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav_bar_container_cns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#314E4C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownIdInLayout">

        <ImageButton
            android:id="@+id/menu_icon_nav_imgbtn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menubtn" />

        <ImageButton
            android:id="@+id/pfp_holder_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pfp_icon_holder" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/nav_bar_container_lnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/nav_bar_container_cns"
        tools:layout_editor_absoluteX="0dp"
        tools:visibility="gone">

        <Button
            android:id="@+id/nav_home_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="#6E787B"
            android:backgroundTint="#225C6E"
            android:backgroundTintMode="src_in"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="Home" />

        <Button
            android:id="@+id/nav_residency_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="#6E787B"
            android:backgroundTint="#225C6E"
            android:backgroundTintMode="src_in"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="Residency" />

        <Button
            android:id="@+id/nav_acts_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="#6E787B"
            android:backgroundTint="#225C6E"
            android:backgroundTintMode="src_in"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="Activities" />

        <Button
            android:id="@+id/nav_members_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="#6E787B"
            android:backgroundTint="#225C6E"
            android:backgroundTintMode="src_in"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="Members" />

        <Button
            android:id="@+id/nav_about_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="#6E787B"
            android:backgroundTint="#225C6E"
            android:backgroundTintMode="src_in"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="About" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>